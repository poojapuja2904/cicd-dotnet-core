@model ContactViewModel
@{

    ViewBag.Title = "Contact";

}

@section Scripts { 
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<div class="col-md-6 offset-md-3">
    <div class="card card-body bg-light">
<div id="theForm">
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
        <label asp-for="Name">Your Name:</label><br />
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-primary"></span>
        </div>

        <br />
        <!---- <label>Password:</label>  <br />
        <input type="password" />
        <br />-->
        <div class="form-group">
        <label asp-for="Email">Email</label>
        <br />
        <input type="Email" asp-for="Email" class="form-control" />
        <br />
        <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <br />

        <div class="form-group">
        <label asp-for="Subject">Subject</label>
        <br />
        <input type="text" asp-for="Subject" class="form-control"/>
        <span asp-validation-for="Subject" class="text-warning "></span>
        </div>
        <br />

        <div class="form-group">
        <label>Message:</label>
        <br />
        <textarea rows="4" name="message" class="form-control"></textarea>
          <span asp-validation-for="Message" class="text-warning"></span>
         </div>
        <br />

        <div class="form-group">
        <button type="submit" class="btn btn-success" ><i class="fa fa-envelope fa"></i>Send Message</button>
        <div class=" text-primary">@ViewBag.UserMessage </div></div>
    </form>
</div>
        </div>
</div>
