@model IEnumerable<Product>  //we need to add entities to view model
<h1>Shop</h1>
<p>@Model.Count()</p>
<div class="row">
    @foreach (var p in Model)
    {
        <div class="col-md-3">
        <div class="border bg-light rounded p-3">
            <img src="~/img/@(p.ArtId).jpg" class="img-fluid" alt="@p.Title" />
            <h3>@p.Category - @p.Size</h3>
            <h3>Wings of fire</h3>
            <ul>
                <li>Price:@p.Price.</li>
                <li>Artist:@p.Artist</li>
                <li>Title: @p.Title</li>
                <li>Description:@p.ArtDescription</li>

            </ul>
            <button id="buyItem" class="btn btn-success"><b>Buy</b></button>
        </div></div>
    }
</div>